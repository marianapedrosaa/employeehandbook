/**
 */
{template .header}
	{@param site: ?}

	<header class="header headerMainPage">
		<div class="container">
			<h1 class="header-title">Liferay Culture Book</h1>
			<h2 class="header-subtitle">{$site.index.description}</h2>
			<div class="header-cta">
				<a href="https://culture-book.wedeploy.io/tutorials/example/intro.html" class="btn btn-accent">First days</a>
				/**
				<a class="highlight-btn" href="/projects" style="user-select: text;">Main call to action </a>
				 */
				<a href="https://culture-book.wedeploy.io/docs/" class="btn btn-default">Documents</a>
			</div>
		</div>
	</header>
{/template}

/**
 */
{template .why}
	<article class="about whycontainer"><a name="topo"></a>
		<div class="container">
			<div class="row">
				<div class="col-md-12 col-md-offset-2">
					<h3 class="about-title">Welcome to our family!</h3>
					<h1 class="about-description">We are thrilled that now you are a member of the Liferay family and we hope that you'll enjoy working here as much as we do. Liferay is an unique place full of passionate and committed people, and we've just gotten this far because of our amazing team. As Liferay continues to grow, we try our best to deliver a great experience not only to our customers, but to our employees as well. We hope that this guide helps you and makes your first days here as easy as possible.</h1>
					<h5 class="about-title">The HR Latam Team </h5>
				</div>
			</div>
		</div>
	</article>
{/template}

/**
 */
{template .banana}
	<article class="about ourhistory">
		<div class="container">
			<div class="row">
				<div class="col-md-12 col-md-offset-2">
				<h3 class="highlight-title" style="user-select: text;">Where we came from</h3>
				<p class="about-description"><img src="/images/linhadotempo.png"></p>
				</div>
			</div>
		</div>
	</article>
{/template}

/**
 */
{template .candybar}
