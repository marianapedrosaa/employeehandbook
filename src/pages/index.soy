{namespace pageIndex}

/**
 */
{template .render}
	{@param site: ?}

	{call main.render data="all"}
		{param content kind="html"}
			{call .header data="all" /}
			{call .why /}
			{call .banana /}
			{call .candybar /}
			// {call .features /}
			{call .products /}
			{call .lolipop /}
			{call .how /}
